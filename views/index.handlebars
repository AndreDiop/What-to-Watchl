<h1>What to Watch</h1>
<div class=" row">
  <div class="col">
          <a href="/movies/new" class="btn btn-link"> Add a movie!</a>

  </div>
</div>

<ul>
  {{#each movies}}
  <li>
    <p>
      {{id}}. {{movie}}
      <a href="/movies/{{id}}" class="btn btn-link"> View details</a>
      <button class="btn btn-danger" data-id={{id}}>Delete movie!</button>
    </p>
  </li>
  {{/each}}
</ul>
<script type="text/javascript">
  $(document).ready(function () {
    $(".btn-danger").on("click", function () {
      const idToDelete = $(this).attr("data-id");
      $.ajax(`api/movies/${idToDelete}`, { type: "DELETE" }).then((response) => {
        console.log(response);
        location.reload();
      })
    })
  })

</script>